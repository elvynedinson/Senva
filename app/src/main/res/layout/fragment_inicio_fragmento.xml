<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/LinearHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">


        <LinearLayout
            android:id="@+id/LinearBotonessuperiores"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnDrawerUser"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:src="@drawable/usuario"
                android:contentDescription="Imagen de usuario"
                android:padding="0dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Contenedor para el bot칩n de notificaciones y el badge -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp">

                <ImageButton
                    android:id="@+id/btnDrawerNotificacion"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/notifiacioninicio"
                    android:contentDescription="Imagen de usuario"
                    android:padding="0dp" />

                <!-- Badge de notificaciones -->
                <TextView
                    android:id="@+id/tvBadgeNotificacion"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="-2dp"
                    android:background="@drawable/badge_cercania"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LinearTextoNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvsaludo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hola, "
                    android:textColor="#65a55f"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvnombresaludo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#65a55f"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 游녦"
                    android:textSize="42sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tu salud en buenas manos"
                android:layout_marginStart="35dp"
                android:textSize="17sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <!-- Secci칩n Campa침as -->
        <LinearLayout
            android:id="@+id/linearCampanas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerCampanas"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="16dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:overScrollMode="never" />

        </LinearLayout>

        <!-- Secci칩n Citas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/tvTituloCitas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Citas"
                android:textColor="#4CAF1C"
                android:textStyle="bold"
                android:textSize="22sp" />

        </LinearLayout>

        <include layout="@layout/item_cita" />

        <!-- Calendario incluido -->
        <include layout="@layout/activity_calendario_inicio" />

    </LinearLayout>
</ScrollView>