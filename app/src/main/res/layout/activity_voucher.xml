<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7aa559"
    android:gravity="center_horizontal"
    android:padding="0dp">

    <!-- Contenedor para el check y la card -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp">

        <!-- Card principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="24dp"
            android:elevation="6dp"
            android:gravity="center_horizontal"
            android:backgroundTint="#fff"
            android:radius="18dp"
            android:layout_gravity="center">

            <!-- Título Senva -->
            <TextView
                android:id="@+id/tvSenva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senva"
                android:textColor="#7aa559"
                android:textStyle="bold"
                android:textSize="36sp"
                android:layout_marginTop="40dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvSubSenva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu cita, tu tiempo, tu Senva"
                android:textColor="#7aa559"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <!-- Nombre usuario y cita programada -->
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MARÍA"
                android:textColor="#2B4A6F"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/tvCitaProgramada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TU CITA PROGRAMADA ES"
                android:textColor="#2B4A6F"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="2dp"/>

            <!-- Fecha y hora -->
            <TextView
                android:id="@+id/tvFechaHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03/JULIO a las 10:00am"
                android:textColor="#2B4A6F"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="2dp"/>

            <!-- Doctor y especialidad -->
            <TextView
                android:id="@+id/tvDoctorEspecialidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dra. Ramírez / Cardiología"
                android:textColor="#2B4A6F"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="2dp"/>

            <!-- QR -->
            <ImageView
                android:id="@+id/imgQR"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/qr"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- Ubicación -->
            <TextView
                android:id="@+id/tvUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(SENVA DE SAN JUAN DE LURIGANCHO)"
                android:textColor="#2B4A6F"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"/>

            <!-- Mensaje de espera -->
            <TextView
                android:id="@+id/tvEsperamos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LE ESPERAMOS!"
                android:textColor="#BDBDBD"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/tvLlegar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Llegar 30 min. antes de su cita"
                android:textColor="#7aa559"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"/>

            <!-- Imagen hoja -->
            <ImageView
                android:id="@+id/imgHoja"
                android:layout_width="250dp"
                android:layout_height="113dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/logosenvaparaelvoucher" />
        </LinearLayout>

        <!-- Icono check sobresaliente -->
        <ImageView
            android:id="@+id/imgCheck"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/confirmarvoucher"
            android:background="@drawable/bg_check_circle"
            android:layout_gravity="top|center_horizontal"
            android:elevation="8dp"/>
    </FrameLayout>

    <!-- Menú inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_menu_rounded"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/homevoucher"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/homevoucher"
                    android:tint="#7aa559"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_menu_rounded"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/nuevacitavoucher"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/nuevacitavoucher"
                    android:tint="#7aa559"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nueva cita"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>