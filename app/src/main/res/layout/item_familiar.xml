<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_backgroundgris"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvNombreFamiliar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Completo"
                android:textColor="#4B8B1D"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tvDniFamiliar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DNI: 12345678"
                android:textColor="#6B99AD"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tvApodoFamiliar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apodo: ApodoFamiliar"
                android:textColor="#6B99AD"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnEditarFamiliar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit"
            android:tint="#4B8B1D"
            android:contentDescription="Editar" />
        <ImageButton
            android:id="@+id/btnEliminarFamiliar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_delete"
            android:tint="#B71C1C"
            android:contentDescription="Eliminar" />
    </LinearLayout>
</LinearLayout> 