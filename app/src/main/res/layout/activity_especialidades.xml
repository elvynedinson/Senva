<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="0dp">

    <!-- Barra superior personalizada -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#8CB86D"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_left"
            android:contentDescription="Volver"
            android:tint="@color/white"
            />

        <TextView
            android:id="@+id/tvTituloDoctores"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Especialidad"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="26sp"
            android:gravity="center"
            android:fontFamily="sans-serif" />

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/userdefault"
            android:background="@drawable/circle_background"
            android:scaleType="centerCrop"
            android:contentDescription="Avatar usuario" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <!-- Paso 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/imgPaso1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/paso1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubi."
                android:textColor="#7aa559"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Línea punteada -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="8dp"
            android:src="@drawable/linea_punteada"
            android:layout_gravity="center_vertical" />

        <!-- Paso 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/imgPaso2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/paso2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esp."
                android:textColor="#7aa559"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="8dp"
            android:src="@drawable/linea_punteada"
            android:layout_gravity="center_vertical" />

        <!-- Paso 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/imgPaso3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/paso3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drs."
                android:textColor="#7aa559"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="8dp"
            android:src="@drawable/linea_punteada"
            android:layout_gravity="center_vertical" />

        <!-- Paso 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/imgPaso4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/paso4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dato"
                android:textColor="#7aa559"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="8dp"
            android:src="@drawable/linea_punteada"
            android:layout_gravity="center_vertical" />

        <!-- Paso 5 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/imgPaso5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/paso5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conf."
                android:textColor="#7aa559"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Barra de búsqueda -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_background_btn_cita"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:elevation="2dp">

        <EditText
            android:id="@+id/etBuscar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Buscar"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:textSize="16sp"
            android:inputType="text"
            android:singleLine="true"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_search"
            android:contentDescription="Buscar"
            android:padding="4dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEspecialidades"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:clipToPadding="false"
        android:overScrollMode="never"/>

</LinearLayout>