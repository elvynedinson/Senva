<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircularImageView">
        <item name="shapeAppearanceOverlay">@style/CircularShapeAppearance</item>
    </style>

    <style name="CircularShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="DrawerMenuItemText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="DrawerMenuItemBackground">
        <item name="android:background">@drawable/drawer_item_background</item>
    </style>

    <style name="ShapeAppearanceOverlay.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>7
    </style>

    <!-- Estilos para CalendarView nativo -->
    <style name="CalendarViewStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CalendarDateTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CalendarWeekDayTextAppearance" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">#388e3c</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarDayHeader">
        <item name="android:textColor">#222</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="CalendarDay">
        <item name="android:textColor">#222</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="CalendarDaySelected">
        <item name="android:textColor">#388e3c</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">#caffd6</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:backgroundTint">#caffd6</item>
        <item name="android:backgroundTintMode">src_in</item>
    </style>
</resources> 